    <div id="create-container">
        <main>
            <h1>Create a new post</h1>
            <p id="todaysDate"><em><%= locals.todaysDate %></em></p>

            <form method="post">
                <input type="text" class="title" id="title" name="title" placeholder="Post title">

                <textarea name="post_data" id="post_data" cols="30" rows="10"></textarea>
                <button class="create-btn" type="submit">Submit</button>
            </form>
        
        </main>
    </div>
    


