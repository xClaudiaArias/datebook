<%- include("./partials/header") -%>
<%- include("./partials/nav") -%>

<div id="posts-container">
    <main>

        <% if (locals.user) { %>
            <div id="posts-user-pf">
                <img src="https://cdn.pixabay.com/photo/2021/11/12/03/04/woman-6787784_1280.png" alt="pfp">
                <p id="pt-username"><%= locals.user.firstName %></p>
                <p id="pt-date"><%= date %></p>
            </div>

            <ul id="posts-posts">
            <% posts.forEach((post) => { %>
            <% console.log(post, " :post") %>
                    <li>
                        <div id="posts-post">
                            <div id="posts-header">
                                <div id="posts-title">
                                    <p><%= post.title %> </p>
                                </div>
                                <div id="posts-date">
                                    <p>November 26, 2024</p>
                                </div>
                                <div id="posts-header-btns">
                                    <button>Share</button>
                                    <button>Edit</button>
                                    <button>Delete</button>
                                </div>
                            </div>
                            <div id="posts-body">
                                <p><%- post.post_data %></p>
                            </div>
                            <div id="posts-footer">
                                <button>Read More</button>
                            </div>
                        </div>
                    </li>
            <% }) %>
        <% } else { %>
            <h1>
                Sorry, No posts found
            </h1>
        <% } %>
    </ul>
    </main>
</div>

<%- include("./partials/footer") -%>