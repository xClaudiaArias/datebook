<%- include("./partials/header") -%>
<%- include("./partials/nav") -%>

<div id="posts-container">
    <main>
        <% if (locals.user) { %>

            <div id="posts-user-pf">
                <img src="" alt="user profile image">
                <p>User's name</p>
                <p>Today's date</p>
            </div>


            <ul id="posts-posts">
                <li>
                    <div id="posts-post">
                        <div id="posts-header">
                            <div id="posts-title"></div>
                            <div id="posts-date"></div>
                            <div id="posts-header-btns">
                                <button>Edit</button>
                                <button>Share</button>
                                <button>Delete</button>
                            </div>
                        </div>
                        <div id="posts-body"></div>
                        <div id="posts-footer">
                            <button>Read More ...</button>
                        </div>
                    </div>
                </li>
            </ul>
        <%> } else { <%>
            <h1>
                Sorry, No posts found
            </h1>
        <%>} <%>
    </main>
</div>

<%- include("./partials/footer") -%>